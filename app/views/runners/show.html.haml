%h3
  Runner: #{@runner.token}

%p.light= @runner.description
%p
  = link_to runners_path do
    &larr; Back to runners list
%hr

- if @runner.shared?
  .alert.alert-success
    %h5 This runner will process build from ALL projects
- else
  .alert.alert-info
    %h5 This runner will process build only from ASSIGNED projects
.row-fluid
  .span6
    %h5 Restrict projects for this runner
    %ul.restrict-projects-list
      - @runner.runner_projects.each do |runner_project|
        - project = runner_project.project
        %li
          %h5
            = project.name
            .pull-right
              = link_to 'Disable', [project, runner_project], data: { confirm: "Are you sure?" }, method: :delete, class: 'btn btn-danger btn-small'

      - (Project.all - @runner.projects).each do |project|
        %li
          %h5
            = project.name
            .pull-right
              = form_for [project, project.runner_projects.new] do |f|
                = f.hidden_field :runner_id, value: @runner.id
                = f.submit 'Enable', class: 'btn btn-small'

  .span6
    %h5 Recent builds served by this runner
    %table.builds.runner-builds
      %thead
        %tr
          %th Status
          %th Commit
          %th Branch
          %th Duration
          %th Finished at

      = render @builds
